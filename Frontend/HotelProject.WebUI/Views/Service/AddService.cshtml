@model HotelProject.WebUI.Dtos.ServiceDto.CreateServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hizmet Ekleme Sayfası</h1>

<form method="post">
    <label>Hizmet Adı</label>
    <input type="text" asp-for=Title class="form-control"></input>
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Hizmet İcon</label>
    <input type="text" asp-for=ServiceIcon class="form-control"></input>
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />
    <label>Hizmet Açıklama</label>
    <input type="text" asp-for=Description class="form-control"></input>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-success">Hizmeti Kaydet</button>
</form>

