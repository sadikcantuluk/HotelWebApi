@using HotelProject.WebUI.Dtos.AppUser
@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Ülke</th>
        <th>Şehir</th>
        <th>Cinsiyet</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src=@item.ImageUrl class=" rounded-circle mr-3" alt="">@item.Name @item.SurName</td>
            <td>@item.Country</td>
            <td>@item.City</td>
            @if (item.Gender=="Erkek")
            {
                <td><i class="fa fa-circle-o text-success  mr-2"></i> Erkek</td>
            }
            @if (item.Gender == "Kadın")
            {
                <td><i class="fa fa-circle-o text-warning  mr-2"></i> Kadın</td>
            }
            @if (item.State==true)
            {
                <td>
                    <div>
                        <div class="progress" style="height: 6px">
                            <div class="progress-bar bg-success" style="width: 76%"></div>
                        </div>
                    </div>
                </td>
            }
            @if (item.State == false)
            {
                <td>
                    <div>
                        <div class="progress" style="height: 6px">
                            <div class="progress-bar bg-danger" style="width: 34%"></div>
                        </div>
                    </div>
                </td>
            }
        </tr>
    }
</table>