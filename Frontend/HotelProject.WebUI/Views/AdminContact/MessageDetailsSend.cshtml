@using HotelProject.WebUI.Dtos.SendMessageDto
@model ResultSendboxDto
@{
    ViewData["Title"] = "MessageDetailsSend";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="email-left-box">
                <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                @await Html.PartialAsync("SideBarAdminContactPartial")
                <h5 class="mt-5 m-b-10">Categories</h5>
                @await Html.PartialAsync("SideBarAdminContactCategoryPartial")
            </div>
            <div class="read-content">
                <div class="media pt-5">
                    <img class="mr-3 rounded-circle" src="~/adminTheme/images/avatar/1.jpg">
                    <div class="media-body">
                        <h5 class="m-b-3">@Model.ReceiverName</h5>
                        <p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</p>
                    </div>

                </div>
                <br>
                <div class="media mb-4 mt-1">
                    <div class="media-body">
                        <span class="float-right">@(((DateTime)Model.Date).ToString("hh:mm tt"))</span>
                        <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted"><strong>Alıcı : @Model.ReceiverMail</strong></small>
                    </div>
                </div>
                <h5 class="m-b-15">Mesaj ;</h5>
                <p>
                    @Model.Content
                </p>
                <br>
            </div>
        </div>
    </div>
</div>





