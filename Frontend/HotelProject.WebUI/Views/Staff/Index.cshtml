@using HotelProject.WebUI.Models.Staff
@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Staff Sayfası</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Ad</th>
        <th>Personel Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StaffId</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="/Staff/DeleteStaff/@item.StaffId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Staff/UpdateStaff/@item.StaffId" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-dark">Detay</a></td>
        </tr>
    }
</table>
<a href="/Staff/AddStaff/" class="btn btn-info">Yeni Personel Ekle</a>

