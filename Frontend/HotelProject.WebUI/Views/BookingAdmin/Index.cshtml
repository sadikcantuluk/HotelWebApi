@using HotelProject.WebUI.Dtos.BookingDto
@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-title">
    <h4>Rezervasyon Paneli</h4>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Misafir</th>
                <th>Durum</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi</th>
                <th>Onayla</th>
                <th>İptal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.BookingID</th>
                    <td>@item.Name</td>
                    <td>@item.Status</td>
                    <td>@(((DateTime)item.Giriş).ToString("dd-MMM-yyy"))</td>
                    <td>@(((DateTime)item.Çıkış).ToString("dd-MMM-yyy"))</td>
                    <td><a href="/BookingAdmin/ApprovedReservation/@item.BookingID" class="btn btn-outline-primary">Onayla</a></td>
                    <td><a href="#" class="btn btn-outline-danger">İptal Et</a></td>
                    <td><a href="#" class="btn btn-outline-warning">Beklet</a></td>
                    <td><a href="#" class="btn btn-outline-info">Güncelle</a></td>
                    <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
