@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    int count = 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />

    @using (Html.BeginForm("Index", "BookingApiCityByID", FormMethod.Post))
    {
        <label>Şehir Id bilgisini girin</label>
        <input type="text" class="form-control" name="cityId" />
        <br />
        <button class="btn btn-primary">Otelleri Listele</button>
    }

    <br />

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Review Score</th>
            <th>Details</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a href="#">Detay</a></td>
            </tr>
        }
    </table>
</div>
