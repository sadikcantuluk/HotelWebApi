@model List<BookingApiSearchLocationViewModel>
@{
    Layout = null;
    int count = 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />

    @using (Html.BeginForm("Index", "BookingApiSearchLocation", FormMethod.Post))
    {
        <label>Şehir ismini girin</label>
        <input type="text" class="form-control" name="cityname" />
        <br />
        <button class="btn btn-primary">Bul</button>
    }

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>**</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@item.dest_id</th>
                <td>Default ID for Paris.(-1456928)</td>
            </tr>
        }
    </table>
    <br />
    <a href="/BookingApiCityByID/Index/" class="btn btn-dark">Yeni Otel Rezervasyon Bilgisi</a>
</div>
